{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@logchimp/api",
  "description": "LogChimp APIs",
  "version": "0.7.0",
  "main": "./index.js",
  "scripts": {
    "dev": "nodemon",
    "start": "node index.js",
    "format": "prettier --write \"**/*.{js}\"",
    "test:unit": "vitest --config ./vitest.config.unit.ts",
    "test:integration": "vitest --config ./vitest.config.integration.ts",
    "db:migrate": "knex --knexfile ./src/database/config.ts migrate:latest",
    "db:migrate:create": "knex --knexfile ./src/database/config.ts migrate:make",
    "db:seed:run": "knex --knexfile ./src/database/config.ts seed:run"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dompurify": "^3.2.6",
    "dotenv": "^17.0.0",
    "express": "^4.17.1",
    "fs-extra": "^11.0.0",
    "html-to-text": "^8.1.0",
    "iovalkey": "^0.3.3",
    "jsdom": "^27.0.0",
    "jsonwebtoken": "^9.0.0",
    "knex": "^2.0.0",
    "lodash": "^4.17.21",
    "md5": "^2.3.0",
    "nanoid": "^3.3.2",
    "nodemailer": "7.0.9",
    "pg": "^8.7.1",
    "uuid": "^9.0.0",
    "valibot": "^1.1.0",
    "validator": "^13.15.20",
    "winston": "^3.3.3",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.0.0",
    "@logchimp/types": "workspace:*",
    "@types/dompurify": "^3.2.0",
    "@types/express": "^5.0.3",
    "@types/html-to-text": "^9.0.4",
    "@types/jsdom": "^27.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/lodash": "^4.17.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.1.0",
    "@types/nodemailer": "^7.0.2",
    "@types/omgopass": "^3.2.3",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "10.0.0",
    "@types/validator": "^13.15.2",
    "nodemon": "^3.1.7",
    "omgopass": "3.2.1",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "typescript": "5.9.3",
    "vitest": "3.2.4"
  },
  "engines": {
    "node": ">=22 < 23"
  }
}
