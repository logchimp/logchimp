{
	"name": "logchimp",
	"description": "A open-source software to track user feedback",
	"version": "0.7.0-beta.0",
	"private": true,
	"repository": {
		"type": "git",
		"url": "https://github.com/logchimp/logchimp.git"
	},
	"bugs": {
		"url": "https://github.com/logchimp/logchimp/issues"
	},
	"workspaces": [
		"packages/**"
	],
	"scripts": {
		"db:migrate": "knex --knexfile ./server/database/config.js migrate:latest",
		"db:migrate:create": "knex --knexfile ./server/database/config.js migrate:make",
		"dev": "nodemon index.js",
		"start": "node index.js",
		"format": "prettier --write \"**/*.{js}\"",
		"test:unit": "jest ./tests/unit",
		"test:integration": "jest --forceExit --detectOpenHandles ./tests/integration"
	},
	"dependencies": {
		"@logchimp/theme": "0.7.0-beta.0",
		"bcryptjs": "^2.4.3",
		"cors": "^2.8.5",
		"express": "^4.17.1",
		"express-rate-limit": "^5.5.0",
		"fs-extra": "^10.0.0",
		"html-to-text": "^8.0.0",
		"jsonwebtoken": "^8.5.1",
		"knex": "^0.95.11",
		"lodash": "^4.17.21",
		"md5": "^2.3.0",
		"multer": "^1.4.3",
		"nanoid": "^3.1.30",
		"nodemailer": "^6.7.0",
		"pg": "^8.7.1",
		"supertest": "^6.1.6",
		"uuid": "^8.3.2",
		"winston": "^3.3.3"
	},
	"devDependencies": {
		"@babel/eslint-parser": "^7.15.8",
		"eslint": "^8.0.1",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-jest": "^25.2.2",
		"eslint-plugin-prettier": "^4.0.0",
		"jest": "^27.2.5",
		"nodemon": "^2.0.13",
		"omgopass": "^3.2.1",
		"prettier": "^2.4.1"
	},
	"keywords": [
		"logchimp",
		"feedback",
		"open-source",
		"codecarrot"
	],
	"engines": {
		"node": ">=12.18.4",
		"yarn": ">=1.22"
	}
}
